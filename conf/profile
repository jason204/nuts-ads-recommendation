export PATH=$M2_HOME/bin:$PATH

# Fulme Home
FLUME_HOME=/opt/app/flume/apache-flume-1.6.0-bin
FLUME_LIB=$FLUME_HOME/lib
export FLUME_HOME
export FLUME_LIB
export PATH=$FLUME_HOME/bin:$PATH
CLASSPATH=$CLASSPATH:$FLUME_LIB
export CLASSPATH

# KAFKA HOME
