# Java Home
JAVA_HOME=/opt/app/java/jdk1.7.0_79
CLASSPATH=.:$JAVA_HOME/lib/dt.jar:$JAVA_HOME/lib/tools.jar:$JAVA_HOME/jre/lib
export JAVA_HOME
export CLASSPATH
export PATH=$JAVA_HOME/bin:$PATH

# Scala Home
SCALA_HOME=/opt/app/scala/scala-2.10.4
export SCALA_HOME
export PATH=$SCALA_HOME/bin:$PATH

# Maven Home
M2_HOME=/opt/app/maven/apache-maven-3.3.9
